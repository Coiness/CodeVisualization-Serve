{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS", // 编写后是 commonjs 规范
    "lib": ["es2015"],
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeRoots": ["node_modules/@types", "Scripts/typings/node"],
  "types": ["mysql", "express", "node", "ws"]
}
